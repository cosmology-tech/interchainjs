{
  "name": "@interchainjs/react",
  "version": "1.9.5",
  "description": "@interchainjs/react is a JavaScript library providing react query hooks for interacting with Cosmos SDK based blockchains.",
  "main": "index.js",
  "module": "esm/index.js",
  "types": "index.d.ts",
  "author": "Hyperweb <developers@hyperweb.io>",
  "homepage": "https://github.com/hyperweb-io/interchainjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/hyperweb-io/interchainjs"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  },
  "scripts": {
    "copy": "copyfiles -f ../../LICENSE-MIT ../../LICENSE-Apache README.md package.json dist",
    "clean": "rimraf dist/**",
    "build": "npm run clean; tsc; tsc -p tsconfig.esm.json; npm run copy",
    "build:dev": "npm run clean; tsc --declarationMap; tsc -p tsconfig.esm.json; npm run copy",
    "lint": "eslint . --fix",
    "prepare": "npm run build"
  },
  "dependencies": {
    "@interchainjs/cosmos": "1.9.5",
    "@interchainjs/cosmos-types": "1.9.5",
    "@interchainjs/encoding": "1.9.5",
    "@interchainjs/pubkey": "1.9.5",
    "@interchainjs/types": "1.9.5",
    "@interchainjs/utils": "1.9.5",
    "@noble/hashes": "^1.3.1",
    "decimal.js": "^10.4.3"
  },
  "devDependencies": {
    "@tanstack/react-query": "4.29.1"
  },
  "peerDependencies": {
    "@tanstack/react-query": "4.29.1"
  },
  "keywords": [
    "cosmos",
    "blockchain",
    "transaction",
    "cosmjs",
    "wallet"
  ]
}
